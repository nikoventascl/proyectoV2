<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner"
    tools:context=".Main3Activity">

    <Button
        android:id="@+id/ver_lista"
        android:layout_width="162dp"
        android:layout_height="52dp"
        android:layout_marginTop="132dp"
        android:onClick="verLista"
        android:text="Ver Carrito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton_nuevo"
        android:layout_width="163dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="47dp"
        android:onClick="ingresarNuevo"
        android:text="Ingresar Nuevo Producto"
        app:layout_constraintBottom_toTopOf="@+id/boton_eliminar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ver_lista" />

    <Button
        android:id="@+id/boton_eliminar"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:onClick="eliminarProductos"
        android:text="Eliminar Productos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_nuevo" />

    <Button
        android:id="@+id/ver_producto"
        android:layout_width="170dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="209dp"
        android:onClick="verProductos"
        android:text="Ver Productos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_eliminar" />

</androidx.constraintlayout.widget.ConstraintLayout>